# Dev Container Environment Variables

# Optionally allow env file in .devcontainer directory to override values
if [ -f .devcontainer/.env ]; then
    export $(cat .devcontainer/.env | grep -v '^#' | xargs)
fi

# Default environment variables
export NODE_ENV=development
export REACT_APP_BACKEND_URL=http://localhost:8000

# Python development tools
alias black='black --line-length=100'
alias isort='isort --profile=black'

# Useful git aliases
alias gst='git status'
alias gaa='git add .'
alias gcm='git commit -m'

# Docker compose shortcuts
alias dc='docker-compose'
alias dcu='docker-compose up -d'
alias dcd='docker-compose down'
alias dcl='docker-compose logs -f'

echo "âœ… Development environment loaded"
